<div>
  <h3>My Collection - <em><%= @format.nil? ? "Article" : @format.type_of.capitalize%></em></h3>
</div>

<br>

  <% if @media.any? %>
    <div>
      <% @media.each do | medium | %>
      <h4><%= link_to medium.title, medium.url, :class => "blue", target: "_blank" %></h4>
      <% end %>
    </div>

    <% else %>
      <div class="empty-display">
      <h4 class="gray" style=" height: 100px;">
      <em style="text-align: center;">Nothing to display</em></h4>
      </div>
  <% end %>
