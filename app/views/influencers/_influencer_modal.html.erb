<!-- Default displays the details of the first influencer in the list -->


<!-- This is what is rendered into the right container of the influencer's modal -->

<div class="close-header title-top-bar top-bar-nav bottom-border">
  <p>close</p>
</div>

<div class="sidebar">
  <h2 class="dark">My Influencers</h2><br>

  <!-- Lists the influencer's included in the user's preferences -->

  <% @preferences.each do | preference| %>
    <h3><%=link_to preference.influencer.name, influencer_path(preference.influencer), :class => "dark", remote: true %></h3>
  <% end %>

  <br><br>

  <!-- Lists all the influencer's available -->

  <h4 class="dark">Top Influencers</h4><br>

  <% @influencers.each do | influencer| %>
    <h4><%=link_to influencer.name, influencer_path(influencer), :class => "gray", remote: true %></h4>
  <% end %>
</div>

<!-- Displays the influencer avatar and name -->

<div class="name-bar">
  <h1 class="dark"><%= @influencer.name %></h1>
</div>

<div class="avatar-container">
  <%= image_tag("connie_chan.jpg", :alt => "Connie Chan", :class => "influencer-avatar") %>
</div>

<!-- Influencer biography displayed here -->

<div class="bio-container">
  <p><%= @influencer.bio %></p>
</div>

<div class="inner-left">

  <!-- Filter tags to toggle between colelcted articles -->

  <h3>Filter</h3>
  <br>
    <h4>
    <%=link_to "Articles",
      influencer_type_path(influencer_id: @influencer.id,
      formata: "article"), :class => "gray", remote: true %>
  </h4>

  <h4>
    <%=link_to "Podcasts",
      influencer_type_path(influencer_id: @influencer.id,
      formata: "podcast"), :class => "gray", remote: true %>
  </h4>

  <h4>
    <%=link_to "Videos",
      influencer_type_path(influencer_id: @influencer.id,
      formata: "video"), :class => "gray", remote: true %>
  </h4>

  <h4>
    <%=link_to "Tweets",
      influencer_type_path(influencer_id: @influencer.id,
      formata: "tweet"), :class => "gray", remote: true %>
  </h4>

  <br>

  <!-- Renders external links to the influencer's accounts -->

  <h3>Accounts</h3>
  <br>

  <div class="accounts-container">
    <% @influencer.accounts.each do |account| %>
      <h4><%=link_to account.platform.name, account.url, :class => "gray" %></h4>
    <% end %>
  </div>

</div>

<!-- Renders default content from the _medium partial -->

<div class="inner-right">

<%= render partial: "influencers/medium" %>

</div>
